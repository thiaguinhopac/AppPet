<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties progress like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#ffffff"
                android:centerColor="#8deeee"
                android:centerY="1.0"
                android:endColor="#8deeee"
                android:angle="270" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient

                    android:startColor="#79cdcd"
                    android:centerColor="#528b8b"

                    android:centerY="1.0"

                    android:endColor="#528b8b"


                    android:angle="270"/>


            </shape>

        </clip>

    </item>


</layer-list>